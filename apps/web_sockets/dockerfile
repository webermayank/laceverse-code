FROM node:18-alpine

WORKDIR /app

# Install necessary dependencies for Prisma
RUN apk add --no-cache openssl

# Copy root package.json and workspace package.json files
COPY package*.json ./
COPY packages/db/package*.json ./packages/db/
COPY apps/web_sockets/package*.json ./apps/web_sockets/

# Install dependencies
RUN npm install

# Copy Prisma schema and generate client
COPY packages/db/prisma ./packages/db/prisma
RUN npx prisma generate --schema ./packages/db/prisma/schema.prisma

# Copy application code
COPY apps/web_sockets ./apps/web_sockets
COPY tsconfig.json ./
COPY packages/db ./packages/db

# Install missing dependencies
WORKDIR /app/apps/web_sockets
RUN npm install ws jsonwebtoken @types/ws @types/jsonwebtoken
RUN npm run build

CMD ["node", "dist/index.js"]